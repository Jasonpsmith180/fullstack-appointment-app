<section class="centerArea">
    <h2>Create New Appointment</h2>
    <form class="new-post-form">
        <div>
            <label for="appointment-title">Appointment Title</label>
            <input type="text" id="appointment-title" name="appointment-title" />
        </div>
        <div>
            <label for="appointment-text">Appointment Info</label>
            <textarea type="text" name="appointment-text"></textarea>
            <label for="appointment-date">Appointment Date</label>
            <input type="text" id="appointment-date" name="appointment-date" /> {{ format_date}}
        </div>
        <button type="submit" class="btn">Create</button>
    </form>
</section>

<section>
    <h2>Your Appointments</h2>
    <ol>
        {{#each posts as |post|}}
        <li>
        {{> post-info post}}
        <a href="/dashboard/edit/{{post.id}}" class="edit-link">Edit Appointment</a>
        </li>
        {{/each}}
    </ol>
</section>

<script src="/javascript/add-post.js"></script>